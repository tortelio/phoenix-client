normalize-css()
//global-reset()
border-box-html()

$white-like = #FFDEAD
$dark-brown = #560c0c

body
  font-family Roboto

input
  font-family Lobster
  font-size 1.25em

.row.error > input
  field-error()

.row > div.error-message
  opacity 0

.row.error > div.error-message
  opacity 1

.table
  display table

.table-cell
  display table-cell

.vertical-mid
  vertical-align middle

.full
  width 100%
  height 100%

.login
  background $white-like

.lobster
  font-family Lobster

.centered
  text-align center
  input
    text-align center

.left
  text-align left
.right
  text-align right

.centered-container
  margin 10px auto

.login-container
  width 1000px

.login-header
  font-family Lobster
  font-size 9em
  color $dark-brown

.login-body
  margin 50px
  width 400px

.form
  margin-top 40px

.row
  width 100%
  margin-top 20px

label
  label: block

.submit
  button($dark-brown, 'large')
  font-family Roboto

.sticky
  background-color #ffc
  padding 5px 30px 30px
  box-shadow 5px 5px 7px rgba(100, 100, 100, 0.5)
  transform rotate(-3deg)
  transition transform .1s linear
  transition .1s
  float left

  input
    border 1px #222 solid

.sticky:hover, .sticky:focus
  transform rotate(0deg)
  //transform-origin 50% 10%
  transform scale(1.05)
  transition .1s
  transition transform .1s linear
  z-index 5

// USER PAGE

.user-container
  width 1000px
  margin 60px auto
  min-height 500px

  .row
    margin-top 5px

.navbar
  nav()

.item
  margin 20px
  width 400px

  label
    label()

.x
  height 0px
  cursor pointer
